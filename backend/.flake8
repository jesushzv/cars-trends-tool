# Flake8 Configuration
# Phase 19: CI/CD Pipeline
#
# Python code linting and style checking

[flake8]
max-line-length = 127
max-complexity = 10
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    venv,
    env,
    ENV,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    migrations,
    *.pyc,
    .DS_Store

# Error codes to always check
select = E,W,F,C

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    conftest.py:E501

# Docstring conventions
docstring-convention = google

# McCabe complexity
max-complexity = 10

# Statistics
statistics = True
count = True

