# Dockerfile for Testing - Matches CI Environment
# This ensures local tests run in same environment as GitHub Actions CI
# Usage: docker build -f Dockerfile.test -t cars-trends-test .
#        docker run --rm cars-trends-test

FROM python:3.13.7-slim-bookworm

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first (for better caching)
COPY backend/requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend code
COPY backend/ .

# Set Python path
ENV PYTHONPATH=/app

# Run tests
CMD ["pytest", "--tb=short", "-v", "--cov=.", "--cov-report=term-missing"]

